<nav
  class="breadcrumb mb-5"
  role="navigation"
  aria-labelledby="system-breadcrumb"
>
  <h2 id="system-breadcrumb" class="hidden">Breadcrumb</h2>
  <ol class="inline-flex items-center space-x-1 md:space-x-3">
    {% for item in breadcrumb %}
    <li class="inline-flex items-center">
      {% if item.url %} {% if loop.first %}
      <a
        href="{{ item.url }}"
        class="inline-flex items-center text-sm font-medium text-nord-1 hover:underline"
      >
        <svg
          aria-hidden="true"
          class="mr-2 h-4 w-4 text-nord-7"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
          ></path>
        </svg>
        {{ item.text }}
      </a>
      {% else %}
      <div class="flex items-center">
        <svg
          aria-hidden="true"
          class="h-6 w-6 text-nord-7"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            fill-rule="evenodd"
            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
            clip-rule="evenodd"
          ></path>
        </svg>
        <a
          href="{{ item.url }}"
          class="ml-1 text-sm font-medium text-nord-1 hover:underline md:ml-2"
          >{{ item.text }}</a
        >
      </div>
      {% endif %} {% else %}
      <div class="flex items-center">
        <svg
          aria-hidden="true"
          class="h-6 w-6 text-nord-7"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            fill-rule="evenodd"
            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
            clip-rule="evenodd"
          ></path>
        </svg>
        <span class="ml-1 text-sm font-medium text-nord-3 md:ml-2"
          >{{ item.text }}</span
        >
      </div>
      {% endif %}
    </li>
    {% endfor %}
  </ol>
</nav>
