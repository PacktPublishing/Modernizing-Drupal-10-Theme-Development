{% set attributes = attributes.addClass('text-white', 'bg-nord-1',
'hover:bg-nord-3', 'font-medium', 'rounded-lg', 'text-sm', 'px-5', 'py-2.5',
'text-center') %}

{% if marginTop %}
  {% set attributes = attributes.addClass('mt-7') %}
{% endif %}

{% if fullWidth %}
  {% set attributes = attributes.addClass('w-full') %}
{% endif %}

<button type="{{ type }}" {{ attributes }}>{{ label }}</button>
