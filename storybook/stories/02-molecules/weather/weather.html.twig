<div class="flex-1 rounded border border-nord-0 px-5 py-2 shadow-sm">
  <div class="mb-5 flex justify-between">
    <div class="text-sm text-nord-0">{{ date1 }}</div>
    <div class="text-sm text-nord-0">{{ date2 }}</div>
  </div>
  <h3 class="text-center text-lg text-nord-1">{{ title }}</h3>
  <div class="text-center text-nord-1">{{ temp }}</div>
  {% if dialogUrl %}
    <div class="mt-5 text-center">
      {% if dialog %}
        <a
          href="{{ dialogUrl }}"
          class="use-ajax mt-5 text-nord-10 underline"
          data-dialog-type="dialog"
          >{{ infoLabel }}</a
        >
      {% else %}
        <a class="mt-5 text-nord-10 underline" href="{{ dialogUrl }}">{{ infoLabel }}</a>
      {% endif %}
    </div>
  {% endif %}
</div>
