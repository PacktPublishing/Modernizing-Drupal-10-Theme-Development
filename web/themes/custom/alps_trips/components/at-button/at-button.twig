<div {{ attributes.addClass('at-button') }}>
  {% if type == 'primary' %}
    {% set bg = 'bg-blue-500 hover:bg-blue-700' %}
  {% elseif type == 'secondary' %}
    {% set bg = 'bg-gray-500 hover:bg-gray-700' %}
  {% elseif type == 'danger' %}
    {% set bg = 'bg-red-500 hover:bg-red-700' %}
  {% endif %}

  <button
    class="{{ bg }} text-white font-bold py-2 px-4 rounded">
    {{ title }}
  </button>
</div>
